<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.rokiba.lostandfound.data.models.responses.ItemRequest" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_below="@id/topBar"
        app:cardElevation="@dimen/_8sdp"
        android:id="@+id/btnCard1"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_15sdp">

        <LinearLayout
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                app:cardCornerRadius="@dimen/_30sdp"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp">

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/textColorMain"
                    android:textStyle="bold"
                    android:text='@{item.RUserName}'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableTint="@color/grey"
                    android:drawableStart="@drawable/ic_location"
                    android:text="Cairo - Nasr City"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    app:tint="@color/colorAccent"
                    android:src="@drawable/ic_request_contact"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_below="@id/topBar"
                    app:cardElevation="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_15sdp">

                    <LinearLayout
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            app:cardCornerRadius="@dimen/_30sdp"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp">

                            <ImageView
                                android:scaleType="centerCrop"
                                android:src="@drawable/avatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:textColor="@color/textColorMain"
                                android:textStyle="bold"
                                android:text='@{item.item.userName}'
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:drawablePadding="@dimen/_5sdp"
                                android:drawableTint="@color/grey"
                                android:drawableStart="@drawable/ic_location"
                                android:text="Cairo - Nasr City"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableTint="@color/grey"
                    android:drawableStart="@drawable/ic_calendar"
                    android:layout_gravity="end"
                    android:text="17/01/2023"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>